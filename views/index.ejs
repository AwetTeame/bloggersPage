<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>My Article Blogging Website</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid d-flex justify-content-between">
      <div class="ms-2">
        <h1 class="ml-auto ms-5">Full Stack Developers Blogging Page</h1>
      </div>

      <div class="me-5">
        <a class="btn btn-warning me-4" href="/user/signup">Register</a>
        <a class="btn btn-dark me-2 " href="/user/signin">Login</a>
      </div>

    </div>
  </nav>


  <div class="container">
    <h2 class="mb-4">Blog Articles</h2>
    <% articles.forEach(article=>{ %>
      <div class="card mt-4">
        <div class="card-body">
          <h4 class="card-title">
            <%= article.title %>
          </h4>
          <div>
            <img src="data:image/png;base64,<%= article.author.photo %>" alt="Author photo">
            <h3><%= article.author.userName %></h3>
          </div>
          <div class="card-subtitle text-muted mb-2">
            <%= article.createdAt.toLocaleDateString() %>
          </div>
          <div class="card-text mb-2">
            <%= article.description %>
          </div>
          <a href="/articles/<%= article.slug %>" class="btn btn-primary btn-sm btn-tight btn-border-thin">
            Read More
          </a>
          </form>
        </div>
      </div>
      <% }) %>
  </div>

  <footer class="container-fluid">
    <p>Copyright &copy; 2023 My Article Blogging Website</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>
</body>

</html>